<%- include ("header")%>

<body class="body">
  <hr>
  <div>
      <a class="navbar-brand"><img class="nav-logo" src="images/loginLogo.gif" alt=""></a>
      <a class="navbar-brand" href="cart"><img class="cartLogo" src="images/cartLogo.png" href="cart" alt=""></a>
  </div>
  <hr> 
  <section class="h-custom">
    <div class="container py-5">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12">
          <div class="card card-registration card-registration-2" style="border-radius: 15px;">
            <div class="card-body p-0">
              <div class="row g-0">
                <div class="col-lg-8">
                  <div class="p-5">
                    <div class="yourplate d-flex justify-content-between align-items-center mb-5">
                      <h1 class="fw-bold mb-0 yourplate">Your Plate</h1>
                      <h6 class="mb-0 text-muted">3 items</h6>
                    </div>
                    <hr>
  
                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                      <div class="col-md-2 col-lg-2 col-xl-2">
                        <img
                          src="images\foodimages\menu\vadapav.jpg"
                          class="img-fluid rounded-3" alt="Cotton T-shirt">
                      </div>
                      <div class="col-md-3 col-lg-3 col-xl-3">
                        <h6 class="text-muted">Vada Pav</h6>
                      </div>
                      <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                        <h6 class="mb-0">₹ 15.00</h6>
                      </div>
                      <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                        <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                      </div>
                    </div>
  
                    <hr>
  
                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                      <div class="col-md-2 col-lg-2 col-xl-2">
                        <img
                          src="images\foodimages\menu\tea.jpg"
                          class="img-fluid rounded-3" alt="Cotton T-shirt">
                      </div>
                      <div class="col-md-3 col-lg-3 col-xl-3">
                        <h6 class="text-muted">Tea</h6>
                      </div>
                      <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                        <h6 class="mb-0">₹ 7.00</h6>
                      </div>
                      <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                        <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                      </div>
                    </div>
  
                    <hr>
  
                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                      <div class="col-md-2 col-lg-2 col-xl-2">
                        <img
                          src="images\foodimages\menu\samosa.jpg"
                          class="img-fluid rounded-3" alt="Cotton T-shirt">
                      </div>
                      <div class="col-md-3 col-lg-3 col-xl-3">
                        <h6 class="text-muted">Samosa</h6>
                      </div>
                      <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                        <h6 class="mb-0">₹ 13.00</h6>
                      </div>
                      <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                        <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                      </div>
                    </div>
                    <hr>
                  </div>
                </div>
                <div class="col-lg-4 bg-grey">
                  <div class="p-5">
                    <h3 class="order fw-bold mb-5 mt-2 pt-1">Order Details</h3>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                      <h5 class="text-uppercase">Grand total</h5>
                      <h5 class="text-uppercase">₹ 35.00</h5>
                    </div>
                    <hr>
                    <button type="button" id="button-main" class="button-main red btn-block btn-lg" data-mdb-ripple-color="light"><b>Place order<b></button>
                    <button type="button" class="button-final red btn-block btn-lg" data-mdb-ripple-color="light"><i class="fas fa-long-arrow-alt-left me-2"></i>Back</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script>
     document.getElementById("button-main").addEventListener("click", function() {
      this.innerHTML = "Order Placed!";
  });
 
  </script>
</body>
</html>
