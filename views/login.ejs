<body class="text-center loginBody">
        <form action="/login" class="form-signin" method="post">
            <img class="mb-4 img" src="images/loginLogo.gif" alt="" width="72" height="57">
            <h1 class="h5 mb-3 fw-normal">Please Login</h1>

              
                <input
                    type="email"
                    class="form-control top"
                    id="floatingInput"
                    name="email"
                    placeholder="Email" required>

                <input 
                    type="password" 
                    class="form-control bottom" 
                    id="floatingInput" 
                    name="password" 
                    placeholder="Password" required>

            <button class="button w-100 btn btn-lg btn-outline-light" type="submit">Login</button>
            <p class="mt-5 mb-3 text-muted">&copy; FoodKart</p>
        </form>
    </body>
