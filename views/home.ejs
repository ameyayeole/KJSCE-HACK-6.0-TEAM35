<%- include("header") %>
    <body class="body">
        <div class="header">
            <center>
                <header class="headertext">"Take a bite out of hunger and Satisfy your cravings!"</header>
            </center>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <center>
                        <img class="intrologo" src="data/intrologo.gif">
                        <h1 class="introtitle">"Life is too Short<br>to have Boring Food!"</h1>
                        <button onclick="window.location.href='login'" class="button" type="button"><b>Log In</b></button>
                        <button onclick="window.location.href='register'" class="button" type="button"><b>Create an Account</b></button>
                    </center>
                </div>
                <div class="col-lg-6">
                    <center>
                      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block introimg1" src="/data/introimg1.png" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="/images/food images/home page/dosa.png" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="/images/food images/home page/dosa.png" alt="Third slide">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>
                    </center>
                </div>
            </div>
        </div>
        <div class="footer">
            <center>
                <footer class="footertext">&copy; Copyright 2022, FoodKart : All Rights Reserved.</footer>
            </center>
        </div>
